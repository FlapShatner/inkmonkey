generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model AddVehicle {
  id              Int           @id @default(autoincrement())
  year            Int
  doors           Int
  addWindowSizeId Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
  make            String
  model           String
  AddWindowSize   AddWindowSize @relation(fields: [addWindowSizeId], references: [id])
}

model AddWindowSize {
  id         Int          @id @default(autoincrement())
  name       String
  a          Int
  b          Int
  c          Int
  AddVehicle AddVehicle[]
}

model Make {
  id      Int       @id @default(autoincrement())
  name    String
  Model   Model[]
  Vehicle Vehicle[]
}

model Model {
  id      Int       @id @default(autoincrement())
  name    String
  makeId  Int
  Make    Make      @relation(fields: [makeId], references: [id])
  Vehicle Vehicle[]
}

model Vehicle {
  id           Int        @id @default(autoincrement())
  makeId       Int
  modelId      Int
  year         Int
  doors        Int
  windowSizeId Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime
  Make         Make       @relation(fields: [makeId], references: [id])
  Model        Model      @relation(fields: [modelId], references: [id])
  WindowSize   WindowSize @relation(fields: [windowSizeId], references: [id])
}

model WindowSize {
  id      Int       @id @default(autoincrement())
  name    String
  a       Int
  b       Int
  c       Int
  Vehicle Vehicle[]
}
